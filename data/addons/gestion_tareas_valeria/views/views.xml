<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="gestion_tareas_valeria.list">
      <field name="name">gestion_tareas_valeria list</field>
      <field name="model">gestion_tareas_valeria.gestion_tareas_valeria</field>
      <field name="arch" type="xml">
        <list>
          <field name="nombre"/>
          <field name="descripcion"/>
        </list>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gestion_tareas_valeria.action_window">
      <field name="name">Gestión de tareas</field>
      <field name="res_model">gestion_tareas_valeria.gestion_tareas_valeria</field>
      <field name="view_mode">list,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="gestion_tareas_valeria.action_server">
      <field name="name">gestion_tareas_valeria server</field>
      <field name="model_id" ref="model_gestion_tareas_valeria_gestion_tareas_valeria"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "list,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Gestión tareas Valeria" id="gestion_tareas_valeria.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Gestión" id="gestion_tareas_valeria.gestion" parent="gestion_tareas_valeria.menu_root"/>

    <!-- actions -->

    <menuitem name="Tareas" id="gestion_tareas_valeria.tareas" parent="gestion_tareas_valeria.gestion"
              action="gestion_tareas_valeria.action_window"/>
   

  </data>
</odoo>
