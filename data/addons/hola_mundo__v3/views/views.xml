<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="hola_mundo__v3.list">
      <field name="name">HolaMundo_V3 list</field>
      <field name="model">hola_mundo__v3.hola_mundo__v3</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </list>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="hola_mundo__v3.action_window">
      <field name="name">HolaMundo_V3 window</field>
      <field name="res_model">hola_mundo__v3.hola_mundo__v3</field>
      <field name="view_mode">list,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="hola_mundo__v3.action_server">
      <field name="name">HolaMundo_V3 server</field>
      <field name="model_id" ref="model_hola_mundo__v3_hola_mundo__v3"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "list,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="HolaMundo_V3" id="hola_mundo__v3.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="hola_mundo__v3.menu_1" parent="hola_mundo__v3.menu_root"/>
    <menuitem name="Menu 2" id="hola_mundo__v3.menu_2" parent="hola_mundo__v3.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="hola_mundo__v3.menu_1_list" parent="hola_mundo__v3.menu_1"
              action="hola_mundo__v3.action_window"/>
    <menuitem name="Server to list" id="hola_mundo__v3" parent="hola_mundo__v3.menu_2"
              action="hola_mundo__v3.action_server"/>

  </data>
</odoo>
